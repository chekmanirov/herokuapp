<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
	<title>heroku + kevin me</title>
	<link rel="stylesheet" href="/css/bootstrap.min.css">
	<link rel="stylesheet" href="/css/font-awesome.min.css">
	<link rel="stylesheet" href="/css/index.css">
	<script type="text/javascript" src="/js/jquery.min.js"></script>
	<script type="text/javascript" src="/js/index.js"></script>
	
	<style>
		body 		{ padding-top:80px; }
	</style>
</head>
<body>
<div class="container-fluid">
	<div class="front-welcome">
			<div class="row">
				<div class="col-xs-12">
					<div class="front-welcome-applicant-logo">
						<img class="pull-left front-welcome-logo" src="/img/heroku-logotype-horizontal-white.png" alt="heroku"/>
						<h1 class="front-welcome-applicant-name"> + kevin me</h1>
					</div>
				</div>
			</div>
	</div>
</div>
<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>
<div class="container auth">
    <div id="big-form" class="well auth-box">
      <form action="/login" method="post">
        <fieldset>       
  		<div class="form-group">
			<label class="sr-only" for="loginUsername">username</label>
			<input id="loginUsername" type="text" class="form-control" name="username" placeholder ="username" value="herokuteam">
		</div>

        <div class="form-group">
			<label class="sr-only" for="loginPassword">password</label>
			<input id="loginPassword" type="password" class="form-control" name="password" placeholder="password">
		</div>

        <button type="submit" class="btn btn-default">Log in</button>
        </fieldset>
      </form>
    </div>
    <div class="clearfix"></div>
  </div>

</body>
</html>